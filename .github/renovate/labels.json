{
  "packageRules": [
    {
      "labels": [
        "type/major"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "labels": [
        "type/minor"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "labels": [
        "type/patch"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "addLabels": [
        "renovate/container"
      ],
      "matchDatasources": [
        "docker"
      ]
    },
    {
      "addLabels": [
        "renovate/helm"
      ],
      "matchDatasources": [
        "helm"
      ]
    },
    {
      "addLabels": [
        "renovate/ansible"
      ],
      "matchDatasources": [
        "galaxy",
        "galaxy-collection"
      ]
    },
    {
      "addLabels": [
        "renovate/terraform"
      ],
      "matchDatasources": [
        "terraform-provider"
      ]
    }
  ]
}
